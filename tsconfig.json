{
	"compileOnSave": true,
	"compilerOptions": {
		"declaration": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"pretty": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": "./src",
		"sourceMap": false,
		"strict": true,
		"target": "es2018"
	},
	"include": [
		"src/**/*.ts"
	]
}
